{
  "name": "mNotes",
  "version": "0.2.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.mservices.mnotes",
    "productName": "mNotes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "notes/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}